<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caicai.mapper.ResignMapper">

    <!-- 基础映射结果集 -->
    <resultMap id="BaseResultMap" type="com.caicai.entity.pojo.UserResign">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="resign_reason" property="resignReason"/>
        <result column="resign_at" property="resignAt"/>
        <result column="check_status" property="checkStatus"/>
        <result column="join_at" property="joinAt"/>
        <result column="witness_name" property="witnessName"/>
        <result column="witness_phone" property="witnessPhone"/>
    </resultMap>
    
    <!-- 基础列名列表 -->
    <sql id="Base_Column_List">
        id, user_id, resign_reason, resign_at, check_status, join_at, witness_name, witness_phone
    </sql>

    <!-- 根据用户ID查询离职信息 -->
    <select id="selectByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM user_resign
        WHERE user_id = #{userId}
        LIMIT 1
    </select>

</mapper> 